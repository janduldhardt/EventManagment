<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bariol_bold"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bariol_light"
        android:paddingHorizontal="15dp"
        android:text="These information will be sent to the event you enroll. All these information provided will be kept confidential."
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bariol_regular"
        android:text="Shirt Size"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:columnCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <android.support.design.button.MaterialButton
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="S"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="M"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="L"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="XL"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="XXL"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="3XL"
            app:cornerRadius="25dp" />

    </GridLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bariol_regular"
        android:text="Food Type"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:columnCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <android.support.design.button.MaterialButton
            android:layout_width="140dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="Normal"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_width="140dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="Vegetarian"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_width="140dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="Islam"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_width="140dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="No Spicy"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_width="140dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="No Eggs"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_width="140dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="No Peanuts"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_width="140dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="No Milk"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_width="140dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="No Shellfish"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_width="140dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="No Wheat"
            app:cornerRadius="25dp" />

        <android.support.design.button.MaterialButton
            android:layout_width="140dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightGrey"
            android:fontFamily="@font/bariol_regular"
            android:text="Other"
            app:cornerRadius="25dp" />
    </GridLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_eventTermsAndConditions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:counterEnabled="true"
        app:counterMaxLength="100"
        app:errorEnabled="true"
        android:textColorHint="@color/red"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medical Condition"
            android:textColor="@color/black"
android:maxLines="5"
            android:text="dadad
dadad
dadad
dadad
dadad
dadad
dadad"/>

    </android.support.design.widget.TextInputLayout>




</android.support.constraint.ConstraintLayout>