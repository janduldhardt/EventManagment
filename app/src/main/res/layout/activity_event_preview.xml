<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventPreviewActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Event Preview"
            android:textSize="40sp" />


        <TextView
            android:id="@+id/preview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="EventName"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/preview_icon_location"
                android:layout_width="19sp"
                android:layout_height="19sp"
                android:layout_below="@id/preview_title"
                tools:src="@drawable/baseline_location_on_black_18dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/preview_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="EventVenue"
                android:textColor="@color/black"
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/preview_icon_time"
                android:layout_width="19sp"
                android:layout_height="19sp"
                android:src="@drawable/baseline_access_time_black_18dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/preview_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EventStartTime"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/preview_endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EventEndDate"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:layout_gravity="center"
                />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="95">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/preview_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <TextView
                    android:id="@+id/preview_organizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organizer"
                    android:textSize="24sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/preview_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadline"
                    android:textSize="24sp"

                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/preview_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacity"
                    android:textSize="24sp"

                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="24sp"

                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/preview_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DescriptionText"
                    android:textSize="19sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms And Conditions"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    />

                <TextView
                    android:id="@+id/preview_termsAndConditons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms And Conditions Text"
                    android:textSize="19sp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Price: "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/preview_ticketPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/preview_icon_phone"
                        android:layout_width="19sp"
                        android:layout_height="19sp"
                        android:src="@drawable/baseline_contact_phone_black_18dp"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/preview_telephoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/preview_icon_phone"
                        android:text="Phone Number"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/preview_icon_facebook"
                        android:layout_width="19sp"
                        android:layout_height="19sp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/facebookicon"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/preview_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Facebook"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/preview_icon_line"
                        android:layout_width="19sp"
                        android:layout_height="19sp"
                        android:src="@drawable/lineicon"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/preview_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/preview_icon_line"
                        android:text="LineID"
                        android:textSize="19sp"
                        />


                </LinearLayout>


            </LinearLayout>


        </ScrollView>


        <Button
            android:id="@+id/btn_preview_createEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Create Event" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>