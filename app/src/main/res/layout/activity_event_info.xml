<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventInfo"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/text_eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Title"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_eventVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venue" />

        <TextView
            android:id="@+id/text_eventDateStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DateStart" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/image_eventImage"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    />

                <TextView
                    android:id="@+id/text_eventOrganizer"
                    android:text="Organizer"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/text_eventDescription"
                    android:text="Description"
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/text_eventTermsAndConditions"
                    android:text="Terms and Conditions"
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_enroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:text="Enroll"

/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>